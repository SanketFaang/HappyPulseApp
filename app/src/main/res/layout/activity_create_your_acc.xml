<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:layout_margin="16dp"
    android:orientation="vertical"
    android:gravity="top"
    android:background="@color/white">
        <!-- Back Icon -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/baseline_arrow_back_ios_24"
            android:layout_gravity="start" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway_bold"
            android:textFontWeight="750"
            android:layout_marginVertical="18dp"
            android:layout_gravity="center"
            android:text="SignUp"
            android:textColor="@color/black"
            android:textSize="30sp" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="302dp"
            android:background="@drawable/img7"/>

        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/textfieldback"
            android:drawablePadding="8dp"
            android:layout_marginVertical="20dp"
            android:fontFamily="@font/raleway"
            android:hint="Type your email"
            android:textFontWeight="450"
            android:inputType="textEmailAddress"
            android:padding="12dp" />

        <!-- Password Input -->
        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:background="@drawable/textfieldback"
            android:drawableEnd="@drawable/baseline_lock_24"
            android:fontFamily="@font/raleway"
            android:textFontWeight="450"
            android:hint="Set a password"
            android:inputType="textPassword"
            android:padding="12dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signUpButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="12dp"
            android:background="@drawable/button_background"
            android:backgroundTint="@color/greenbutton"
            android:fontFamily="@font/raleway"
            android:text="Sign up"
            android:textFontWeight="650"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Already have a account? Log in"
            android:textFontWeight="650"
            android:textColor="@color/black"
            android:textSize="14sp" />
</LinearLayout>
