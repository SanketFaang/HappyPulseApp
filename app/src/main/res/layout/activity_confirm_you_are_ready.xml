<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main"
    android:padding="16dp"
    android:background="@android:color/white">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_back_ios_24"
        android:layout_gravity="start"
        android:layout_marginBottom="15dp"
        android:padding="8dp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/raleway"
        android:paddingBottom="16dp"
        android:text="Confirm you're ready"
        android:layout_marginBottom="15dp"
        android:textFontWeight="650"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <!-- Privacy Policy Notice -->
    <TextView
        android:id="@+id/privacy_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:fontFamily="@font/raleway"
        android:textFontWeight="550"
        android:lineSpacingExtra="4dp"
        android:text="@string/please_read_our_privacy_policy_and_confirm_the_following_declarations_consents_can_be_withdrawn_in_settings_at_any_time"
        android:textColor="@android:color/black"
        android:textSize="17sp" />

    <!-- First Checkbox -->
    <CheckBox
        android:id="@+id/checkbox_terms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:gravity="top"
        android:buttonTint="@android:color/darker_gray"
        android:textFontWeight="550"
        android:fontFamily="@font/raleway"
        android:text="@string/i_agree_to_ada_"
        android:textSize="16sp" />

    <!-- Second Checkbox -->
    <CheckBox
        android:id="@+id/checkbox_consent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:buttonTint="@android:color/darker_gray"
        android:fontFamily="@font/raleway"
        android:lineSpacingExtra="4dp"
        android:gravity="top"
        android:layout_marginBottom="15dp"
        android:textFontWeight="550"
        android:text="@string/i_consent_to_ada_"
        android:textSize="16sp" />

    <!-- Continue Button -->
    <Button
        android:id="@+id/continue_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/greenbutton"
        android:fontFamily="@font/raleway"
        android:paddingVertical="12dp"
        android:text="Continue"
        android:textSize="16sp"
        android:textFontWeight="650"
        android:textAllCaps="false"
        android:textColor="@android:color/white" />

</LinearLayout>
