            android:text="Mon" />

        <TextView
            android:id="@+id/day2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="5dp"
            android:fontFamily="@font/raleway_medium"
            android:text="Tue" />

        <TextView
            android:id="@+id/day3"
            android:layout_width="wrap_content"
